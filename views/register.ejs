<% include layout/head %>     
	<body>
		<div id="wrap">	
			<div class="header">               
			    <div class="container">
			        <div class="logo">                                             
			            <a href="index.html"><img id="logo-header" src="/images/design/logo2.png" alt="Logo"></a>
			        </div>      
			        <div class="navbar">                                
			            <div class="navbar-inner">                                  
			                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
			                    <span class="icon-bar"></span>
			                    <span class="icon-bar"></span>
			                    <span class="icon-bar"></span>
			                </a>                                
			                <div class="nav-collapse collapse">                                     
			                    <ul class="nav top-2">
			                    	<li>
			                            <a href="/" class="dropdown-toggle">Home</a>
			                        </li>
			                   		<% if (user && user.rights === 'Admin') { %>                        
				                        <li>
				                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Transaction
				                                <b class="caret"></b>                            
				                            </a>
				                            <ul class="dropdown-menu">
				                                <li><a href="">Add Medicine / Equipment</a></li>
				                                <li><a href="">Confirm Request</a></li>
				                            </ul>
				                            <b class="caret-out"></b>                        
				                        </li>
				                        <li>
				                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Inventory
				                                <b class="caret"></b>                            
				                            </a>
				                            <ul class="dropdown-menu">
				                                <li><a href="">Medicine</a></li>
				                                <li><a href="">Equipment</a></li>
				                            </ul>
				                            <b class="caret-out"></b>                        
				                        </li>
				                    <% } %>	
			                        <li>
			                        	
			                        	<% if (!user) { %>
			                        		<a href="/login" class="dropdown-toggle">
											Log In
										<% } else { %> 
											<a href="#" class="dropdown-toggle" data-toggle="dropdown">
											<%=user.fullname%>
											<b class="caret"></b> 
			                            <% } %>			                                                           
			                            </a>
			                            <ul class="dropdown-menu">
			                            	<li><a href="">Edit Profile</a></li>
			                                <li><a href="/logout">Log Out</a></li>
			                            </ul>
			                            <b class="caret-out"></b>                        
			                        </li>
			                        <li><a class="search"><i class="icon-search search-btn"></i></a></li>                               
			                    </ul>
			                    <div class="search-open">
			                        <div class="input-append">
			                            <form>
			                                <input type="text" class="span3" placeholder="Search" />
			                                <button type="submit" class="btn-u">Go</button>
			                            </form>
			                        </div>
			                    </div>			                    
			                </div>                              
			            </div>
			        </div>                         
			    </div>             
			</div>   
			<div class="breadcrumbs margin-bottom-40">
		    	<div class="container">
		            <h1 class="color-green pull-left">Register</h1>
		            <ul class="pull-right breadcrumb">
		                <li><a href="/">Home</a> <span class="divider">/</span></li>
		                <li class="active">Registration</li>
		            </ul>
		        </div>
		    </div>
			<div class="container">
				<div class="row-fluid margin-bottom-10">						     	
		        	<form class="reg-page" method="post" accept-charset="utf-8">
		        		<% if (message) { %>					
							<div class="alert alert-block alert-message">
								<button type="button" class="close" data-dismiss="alert">&times;</button>
								<p><%= message %></p>
							</div>
						<% } %>	
		            	<h3>Register a new account</h3>
		                <div class="controls">    
		                    <label>
		                    	Full Name 
		                    	<span class="color-red">*	                    	
	                    		<% if (message) { %>
	                    			<% if (message==='missing_fullname') { %>		
										<span class="alert-message"> <%= message %></span>
									<% }%>
								<% }%>
								</span>
		                    </label>
		                    <input type="text" class="span12" name="fullname" />		                    
		                    <label>
		                    	Email Address
		                    	<span class="color-red">*	                    	
	                    		<% if (message) { %>					
									<% if (message==='incorrect_email') { %>		
										<span class="alert-message"> <%= message %></span>
									<% }%>
								<% }%>
								</span>
		                    </label>
		                    <input type="email" class="span12" name="email" id="reqEmail"/>
		                </div>
		                <div class="controls">
		                    <div class="span6">
		                        <label>
		                        	Password 
			                        <span class="color-red">*</span>
		                        </label>
		                        <input type="password" class="span12" name="regpassword"/>
		                    </div>
		                    <div class="span6">
		                        <label>Confirm Password <span class="color-red">*</span></label>
		                        <input type="password" class="span12" name="regconpass"/>
		                    </div>
		                </div>
		                <div class="controls">
		                	<label>
		                		Birthdate 
		                		<span class="color-red">*</span>
		                	</label>
							<div class="input-append date" id="dp3" data-date-format="mm-dd-yyyy">
							    <input class="span2" size="16" type="text" style="width:325px" name="bdate" readonly>
							    <span class="add-on"><i class="icon-calendar"></i></span>
							</div>
		                </div>
		                <div class="controls">    		                    
		                    <label>
		                    	Home Address 
		                    	<span class="color-red">*	                    	
	                    		<% if (message) { %>					
									<% if (message==='missing_address') { %>		
										<span class="alert-message"> <%= message %></span>
									<% }%>
								<% }%>
								</span>
		                    </label>
		                    <input type="text" class="span12" name="homeaddress"/>		                    
		                </div>		                
		                <div class="controls form-inline">
		                    <label class="checkbox"><input type="checkbox" />&nbsp; I read <a href="">Terms and Conditions</a></label>
		                    <button class="btn-u pull-right" type="submit">Register</button>
		                </div>
		                <hr />
						<p>Already Signed Up? Click <a href="/login" class="color-green">Sign In</a> to login your account.</p>
		            </form>
		        </div>
			</div>
			<div class="push" style="height:100px;"></div>
	    </div>

<% include layout/footer %>
